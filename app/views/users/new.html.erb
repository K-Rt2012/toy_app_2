<h1>New User</h1>

<div>
  <div>
    <%= form_tag("/users/create") do %>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <div>
        Name<br>
        <input name = "name">
      </div>
      <div>
        Password<br>
        <input name = "password">
      </div>
      <div>
        Email<br>
        <input name = "email">
      </div>

      <p><input type="submit" value="Create User"></p>
    <% end %>
  </div>

  <p><%= link_to("Back","/users") %></p>
</div>
