<h1>Listing users</h1>

<table>
  <tr>
    <th> <b>Image</b></th>
    <th> <b>Name</b></th> 
    <th> <b>Email</b></th>
    <th colspan="3"> <b>CRUD処理</b></th>
  </tr>
  <% @user.each do |user| %>
    <tr>
      <% if user.image.attached? %>
        <td class="index_data"><%= image_tag user.image, class:"user_image" %></td>
      <% else %>
        <td class="index_data"><%= image_tag "hitogata.jpg", class:"user_image" %></td>
      <% end %>
      <td class="index_data"><%= user.name %></td>
      <td class="index_data"><%= user.email %></td>

      <td class="index_crud"><%= link_to("Show","/users/#{user.id}") %></td>
      <td class="index_crud"><%= link_to("Edit","/users/#{user.id}/edit") %></td>
      <td class="index_crud"><%= link_to("Destroy","/users/#{user.id}/destroy", {method:"post"}) %></td>
    </tr>
  <% end %>
</table>
<%= link_to("New User","/users/new") %>