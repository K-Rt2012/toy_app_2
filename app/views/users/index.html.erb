<h1>Listing users</h1>

<table>
  <tr>
    <th> <b>Image</b></th>
    <th> <b>Name</b></th> 
    <th> <b>Email</b></th>
    <th colspan="3"></th>
  </tr>
  <% @user.each do |user| %>
    <tr>
      <% if user.image.attached? %>
        <td class="td_user"><%= image_tag user.image, class:"user_image" %></td>
      <% else %>
        <td class="td_user"><%= image_tag "hitogata.jpg", class:"user_image" %></td>
      <% end %>
        <td class="td_user"><%= user.name %></td>
        <td class="td_user"><%= user.email %></td>

        <td class="td_crud_user"><%= link_to "Show","/users/#{user.id}", class:"btn btn-primary" %></td>
      <% if current_user.id == user.id %>
        <td class="td_crud_user"><%= link_to "Edit","/users/#{user.id}/edit", class:"btn btn-primary" %></td>
        <td class="td_crud_user"><%= link_to "Destroy","/users/#{user.id}/destroy", method: :post, class:"btn btn-primary" %></td>
      <% end %>
    </tr>
  <% end %>
</table>
